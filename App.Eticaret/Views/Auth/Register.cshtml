@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@if(!string.IsNullOrEmpty(ViewBag.Error)){
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="success">
        @ViewBag.Success
    </div>
}




<div class="container-fluid">
    <div class="row">
        <h2 class="col-12 text-center">Register</h2>
        <div class="col-12 col-md-6 offset-md-3">
            <form method="post" asp-controller="Auth" asp-action="Register">
                <div class="form-group">
                    <label asp-for=FirstName>First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" name="FirstName" required maxlength="50">
                </div>
                <div class="form-group">
                    <label asp-for=LastName>Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" name="LastName" required maxlength="50">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" name="Email" required>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" name="Password" required>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="site-btn mr-auto">Register</button>
                    <a asp-controller="Auth" asp-action="Login" class="site-btn mr-2">Login</a>
                    <a asp-controller="Auth" asp-action="ForgotPassword" class="site-btn">Forgot Password</a>
                </div>
            </form>
        </div>
    </div>
</div>